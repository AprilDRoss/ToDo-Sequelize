<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8">
    <title>Todo List</title>
  </head>
  <body>
    <h1>ToDo List</h1>
    <form action="/" method="post">
      <input type ="text" value="" placeholder="Enter Task" name="task"><button type="submit">Submit</button>
    </form>
    <h2>ToDos</h2>
    <form action ="/complete" method="post">
        {{#todos}}
          <ul>
            {{^completed}}
              <li>{{name}}</li>
              <button type="submit" name="clicked" value="{{id}}">Complete Task</button>
              <a href="/edit/{{id}}">Edit</a>
            {{/completed}}
          </ul>
        {{/todos}}
      </form>
    <h2>Completed</h2>
    <form action ="/delete" method="post">
      <ul>
      {{#todos}}
      <li>{{name}}</li>
      <button type="submit" name="delete" value="{{id}}">Delete Task</button>
      {{/todos}}
    </form>
  </body>
</html>
